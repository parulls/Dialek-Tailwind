<?php
include("connect.php");
header("Content-Type: application/json");

try {
    // Validasi firebase_uid
    $firebaseUid = $_GET['firebase_uid'] ?? null;

    if (!$firebaseUid || empty(trim($firebaseUid))) {
        echo json_encode(["success" => false, "message" => "Firebase UID tidak valid."]);
        exit;
    }

    // Query untuk mendapatkan data pengguna berdasarkan firebase_uid
    $stmt = $conn->prepare("
        SELECT name, username, email, phone, profile_image 
        FROM users 
        WHERE firebase_uid = :firebase_uid
    ");
    $stmt->execute([':firebase_uid' => $firebaseUid]);

    // Periksa apakah data pengguna ditemukan
    if ($stmt->rowCount() > 0) {
        $userData = $stmt->fetch(PDO::FETCH_ASSOC);
        echo json_encode(["success" => true, "data" => $userData]);
    } else {
        echo json_encode(["success" => false, "message" => "Pengguna tidak ditemukan."]);
    }
} catch (PDOException $e) {
    // Tangani kesalahan koneksi atau query database
    echo json_encode(["success" => false, "message" => "Terjadi kesalahan pada database: " . $e->getMessage()]);
} catch (Exception $e) {
    // Tangani kesalahan umum lainnya
    echo json_encode(["success" => false, "message" => "Terjadi kesalahan: " . $e->getMessage()]);
}
?>
